<p id="notice"><%= notice %></p>
<div class="col-6 list-main container">
  <div class="row list-head">
    <h1><%= @task_list.name %></h1>
    <%= link_to 'New Task', new_task_path(list: @task_list) %>
    <%= link_to 'My Tasks', task_lists_path %>
  </div>
  <div class="row list-body">
    <ul class="list-group">
      <% @tasks.each do |task| %>
        <li id="task-<%= task.id %>" class="list-group-item">
          <span class="task-name"><%= task.name %></span>
          <span class="dropdown manage-task">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              <span class="glyphicon glyphicon-menu-hamburger"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li>
                <a class="move-up" data-id="<%= task.id %>"><span class="glyphicon glyphicon-triangle-top"></span> Move Up</a>
              </li>
              <li>
                <a class="move-down" data-id="<%= task.id %>" href="#"><span class="glyphicon glyphicon-triangle-bottom"></span> Move Down</a>
              </li>
              <li>
                <a class="edit-task" data-id="<%= task.id %>"><span class="glyphicon glyphicon-cog"></span> Edit</a>
              </li>
              <li role="separator" class="divider"></li>
              <li>
              <%= link_to "#", :href => task_url(task, :list => params[:id]), :class => "task-delete-link", :method => :delete, :remote => true, "data-confirm".to_sym => "Are you sure you want to delete this task?" do%>
                <span class="glyphicon glyphicon-trash"></span> Delete
              <% end %>
              </li>
            </ul>
          </span>
        </li>
      <% end %>
    </ul>
  </div>
</div>