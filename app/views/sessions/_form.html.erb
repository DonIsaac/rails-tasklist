<%= form_with scope: :session, url: sessions_path do |form| %>
	<div class="form-group">
		<%= form.label :login %>
		<%= form.text_field :login, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= form.label :password %>
		<%= form.password_field :password, class: 'form-control' %>
	</div>
	<br />
	<%= form.submit 'Log In', class: 'btn btn-primary' %>
<% end %>