<%= form_with scope: :session, url: sessions_path do |form| %>
	<div class="form-group">
		<%= form.label :login %>
		<%= form.text_field :login, class: 'form-control', placeholder: 'Username' %>
	</div>
	<div class="form-group">
		<%= form.label :password %>
		<%= form.password_field :password, class: 'form-control', placeholder: 'Password' %>
	</div>
	<br />
	<%= form.submit 'Log In', class: 'btn btn-primary' %>
	<small>Don't have an account? <a href="<%= new_user_path %>">Sign up</a> for free!</small>
<% end %>